#!/bin/bash
# Pre-commit hook: gitleaks secret scanning
# Prevents commits containing secrets, API keys, or sensitive data

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo "Running gitleaks secret scan..."

# Run gitleaks on staged changes (uses gitleaks.toml if present)
gitleaks protect --staged --verbose --redact --config="$(git rev-parse --show-toplevel)/gitleaks.toml" 2>/dev/null || gitleaks protect --staged --verbose --redact

if [ $? -ne 0 ]; then
    echo -e "${RED}❌ gitleaks detected secrets in staged files${NC}"
    echo ""
    echo "To fix:"
    echo "  1. Remove the secret from the file"
    echo "  2. If it's a false positive, add to .gitleaksignore"
    echo "  3. Use environment variables instead of hardcoded secrets"
    echo ""
    echo "To bypass (NOT recommended):"
    echo "  git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}✅ No secrets detected${NC}"

# Check if any plugin files were modified
PLUGIN_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '^plugins/.*\.(ts|js|json|md)$')

if [ -n "$PLUGIN_FILES" ]; then
    echo ""
    echo "Plugin files modified, validating dependencies..."

    # Check if Bun is available
    if ! command -v bun &> /dev/null; then
        echo "⚠️  Warning: Bun not installed, skipping dependency validation"
        echo "   Install Bun: brew install oven-sh/bun/bun"
    else
        # Run dependency validation (silent unless errors)
        bun run scripts/validate-dependencies.ts --check --json > /tmp/dep-check.json 2>&1

        if [ $? -ne 0 ]; then
            echo -e "${RED}❌ Dependency validation failed${NC}"
            echo ""
            echo "Missing dependencies detected. Run for details:"
            echo "  bun run scripts/validate-dependencies.ts"
            echo ""
            echo "To bypass (NOT recommended):"
            echo "  git commit --no-verify"
            exit 1
        fi

        echo -e "${GREEN}✅ All dependencies satisfied${NC}"
    fi
fi

exit 0
